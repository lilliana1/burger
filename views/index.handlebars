<div class="container">
<div class="jumbotron">
        <h1>Burgers</h1>
        <p>Make them, eat them, enjoy them</p>
        <br>
        <h2>Create Burger</h2>
        
            <form class="create-form">
                <div class="form-group">
                    <label for="newburger">Burger:</label>
                    <input type="text" id="newburger" name="burger" placeholder=" name me, sis">
                    <button type="submit" class="btn btn-success" id="addburger">Create</button>
                </div>
            </form>
        
    </div>


    <div class="row">
        <!-- Undevoured Burgers COL -->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftheader"><strong>Burgers you are about to devour ðŸ¤¤</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#unless devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Devoured</button>
                                <hr>
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <!-- Devoured Burgers COL-->
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightheader"><strong>Devoured Burgers ðŸ¤°</strong></div>
                <div class="panel-body">
                    <ul>
                        {{#each burgers}}
                            {{#if devoured}}
                                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}">Throw it</button>
                                <hr>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div><!-- /row -->

</div><!-- /container -->